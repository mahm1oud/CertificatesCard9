# إعدادات قاعدة البيانات
DATABASE_TYPE=postgres
DATABASE_URL=postgresql://postgres:password@localhost:5432/certificates

# إعدادات MySQL (تستخدم فقط عند ضبط DATABASE_TYPE=mysql)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=password
MYSQL_DATABASE=certificates
MYSQL_CONNECTION_LIMIT=10
MYSQL_RETRY_ATTEMPTS=5
MYSQL_RETRY_DELAY=2000
MYSQL_SSL=false
MYSQL_DEBUG=false

# إعدادات الخادم
PORT=5000
HOST=0.0.0.0
NODE_ENV=production
BASE_PATH=/
API_URL=https://collider.online

# إعدادات المسارات
UPLOADS_DIR=uploads
TEMP_DIR=temp
FONTS_DIR=fonts
LOGS_DIR=logs
STATIC_DIR=client/static

# إعدادات تتبع الأخطاء
LOG_LEVEL=info
ERROR_STORAGE_TYPE=file
MAX_LOG_SIZE=10485760
INCLUDE_USER_INFO=true
TRUNCATE_STACK_TRACE=true
MAX_STACK_FRAMES=20

# إعدادات الجلسات والأمان
SESSION_SECRET=please-change-this-to-a-secure-random-string
SESSION_NAME=certificates.sid
SESSION_MAX_AGE=604800000
SESSION_SECURE=false
SESSION_SAME_SITE=lax
COOKIE_MAX_AGE=604800000

# إعدادات التطبيق
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=700700
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_NAME=مدير النظام

# إعدادات الصور
DEFAULT_IMAGE_QUALITY=medium
WEBP_ENABLED=true
THUMBNAIL_WIDTH=300
PREVIEW_QUALITY=80
DOWNLOAD_QUALITY=100

# إعدادات CORS
ENABLE_CORS=true
CORS_ORIGIN=*
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE

# إعدادات أمان إضافية
JWT_SECRET=please-change-this-to-a-secure-random-string
JWT_EXPIRES_IN=7d
CSRF_ENABLED=true
CSRF_COOKIE_NAME=csrf-token
CSRF_SECRET=please-change-this-to-a-secure-random-string
SECURITY_HEADERS_ENABLED=true
XSS_PROTECTION=true
CONTENT_TYPE_OPTIONS=true